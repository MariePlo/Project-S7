
<!DOCTYPE html>
<html lang="en">
  <head>
      <% include partials/head %>
  </head>
  <body class="container">
    <div id="form-control">
      <h1>Sign Up </h1>
      <hr/>
      <p><%= existErr === "" ? "" : existErr %></p>
      <p><%= emptyErr === "" ? "" : emptyErr %></p>

      <form action="/signup" method="post">

        <div class="form-control">
          <label for="form_username">Username : </label>
          <input id="form_username" type="text" name="username" />
        </div>

        <div class="form-control">
          <label for="form_email">Email : </label>
          <input id="form_email" type="email" name="email" />
        </div>

        <div class="form-control">
          <label for="form_password">Password : </label>
          <input id="form_password" type="password" name="password" />
        </div>
        
        <button class="btn btn-primary" type="submit" value="Submit">Sign up</button>
      </form>
      <hr/>
    </div>
  </body>
</html>
